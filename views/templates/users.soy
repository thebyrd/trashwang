{namespace templates.users autoescape="contextual"}

/**
 * Selfie Signup
 */
{template .signup}
<div class="content signup">
  <div id="animatedArea">
    <div class="content-padded">
      <div class="headline">
        <h1>TR▲SH W▲NG</h1>
        <form action="/users" enctype="multipart/form-data" method="post">
          <div class="input-group">
            <input type="text" name="name" placeholder="ur name">
            <input type="email" name="email" placeholder="ur email">
            <input type="password" name="password" placeholder="ur pw">
            <input class="camera-input" type="file" accept="image/{literal}*{/literal}" capture="camera" name="picture">
          </div>
          <button class="button-negative button-block" type="submit" style="display:none" id="new-user-submit"></button>
          <button data-action="open-camera" class="button-main button-block">sign in with a selfie</button>
        </form>
        <div class="login-link">
          <!--<a href="#" onclick="window.location='/login'">Already have an account?</a>-->
          <a href="/login">Already have an account?</a>
        </div>
      </div>
    </div>
  </div>
</div>
{/template}

/**
 * login
 */
{template .login}
<div class="content signup login">
  <div id="animatedArea">
    <div class="content-padded">
      <div class="headline">
        <h1>UR B▲CK ?</h1>
        <form action="/login" enctype="multipart/form-data" method="post">
          <div class="input-group">
            <input type="email" name="email" placeholder="email">
            <input type="password" name="password" placeholder="password">
          </div>
          <button class="button-main button-block" type="submit" id="user-login">Let's Party &rarr;</button>
        </form>
    </div>
  </div>
</div>
{/template}

/**
 * Renders a particular user
 * @param user
 */
{template .show}
<header class="bar-title">
  <h1 class="title">{$user.name}</h1>
</header>
<div class="content">
  <h1>{$user.name}</h1>
  <img src="https://s3.amazonaws.com/trashwang/{$user.img}">
</div>
{/template}
