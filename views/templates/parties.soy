{namespace templates.parties autoescape="contextual"}

/**
 * a list of parties
 * @param parties
 */
{template .index}
  <header class="bar-title bar-title-negative">
    <a class="button-prev" href="/">
      Previous
    </a>
    <h1 class="title">Parties</h1>
  </header>
  <div class="content">
    <form>
      <input type="search" placeholder="Search">
    </form>
    <ul class="list">
      {foreach $party in $parties}
        <li>
          <a href="/parties/{$party.id}">{$party.title}</a>
          <span class="chevron"></span>
        </li>
      {/foreach}
  </ul>
  </div>
{/template}

/**
 * Renders a particular party
 */
{template .show}
  Hello world
{/template}

/**
 * create a party
 */
{template .create}
  Hello world
{/template}
